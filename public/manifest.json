{
  "name": "Polaris IDE",
  "short_name": "Polaris",
  "description": "A powerful cloud IDE with AI assistance, built for modern development workflows",
  "start_url": "/",
  "display": "standalone",
  "orientation": "landscape",
  "theme_color": "#0b1220",
  "background_color": "#0b1220",
  "categories": ["productivity", "utilities", "developer"],
  "screenshots": [
    {
      "src": "/screenshots/dashboard.png",
      "sizes": "1920x1080",
      "type": "image/png",
      "form_factor": "wide"
    },
    {
      "src": "/screenshots/editor.png",
      "sizes": "1920x1080",
      "type": "image/png",
      "form_factor": "wide"
    }
  ],
  "icons": [
    {
      "src": "/logo.svg",
      "sizes": "any",
      "type": "image/svg+xml",
      "purpose": "any"
    },
    {
      "src": "/favicon.ico",
      "sizes": "48x48",
      "type": "image/x-icon"
    }
  ],
  "shortcuts": [
    {
      "name": "New Project",
      "short_name": "New Project",
      "description": "Create a new project",
      "url": "/projects/new",
      "icons": [{ "src": "/icons/plus.svg", "sizes": "96x96" }]
    },
    {
      "name": "Import Project",
      "short_name": "Import Project",
      "description": "Import from GitHub",
      "url": "/projects/import",
      "icons": [{ "src": "/icons/github.svg", "sizes": "96x96" }]
    }
  ],
  "protocol_handlers": [
    {
      "protocol": "web+polaris",
      "url": "/?action=%s"
    }
  ],
  "edge_side_panel": {
    "preferred_width": 400
  },
  "launch_handler": {
    "client_mode": "navigate-existing"
  }
}
